{
    "manifest_version": 3,
    "name": "LinkedIn Filter",
    "version": "1.0",
    "description": "Filters cringe content on your LinkedIn feed using an AI model.",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://www.linkedin.com/*",
      "https://api.openai.com/*",
      "https://generativelanguage.googleapis.com/*",
      "https://api.groq.com/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"]
,
        "js": ["scripts/content.js"]
      }
    ],
    "background": {
      "service_worker": "scripts/background.js"
    }
  }